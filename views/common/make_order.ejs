<form action="/place-order" method="post">

   <div class="container border border-primary rounded mt-5 detail" style="min-height: 500px;">

      <div class="row  mt-5 fs-5 justify-content-center">
         <h1 class="text-center mb-5">Your Address</h1>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field ">Name</div><input type="text" name="name" id="">
         </div>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field">Phone No </div><input type="number" name="phone" id="">
         </div>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field">Email Id</div> <input type="email" name="email" id="">
         </div>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field ">City</div><input type="text" name="city" id="">
         </div>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field">Pin Code</div><input type="number" name="pincode" id="">
         </div>
         <div class="col-md-4 card m-2  " style="height: 100px; max-width: 400px;">
            <div class="field">State</div> <input type="text" name="state" id="">
         </div>
         <button type="submit" class="d-block mx-5 bg-primary" style="max-width: 300px; color: white;">Save
            Address</button>
      </div>
   </div>


</form>