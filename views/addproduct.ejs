<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/header.css">
</head>

<body>


    <%- include('common/header.ejs') %>

        <h1>Add New Product in Website</h1>
        <div class="container bg-secondary py-3">

            <form action="/addproduct" method="post">
                <div class="mb-3">
                    <label class="form-label">Prodcut Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product price per unit</label>
                    <input type="text" class="form-control" name="price" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Catagary</label>
                    <select name="category" required>
                        <option value="vegitable">vegitable</option>
                        <option value="fruit">fruit</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product image</label>
                    <input type="text" class="form-control" name="image_url" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product discripiton</label>
                    <input type="text" class="form-control" name="discription" required>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
            crossorigin="anonymous"></script>
</body>

</html>