<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sabjiwalla</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/header.css">
    <link rel="stylesheet" href="/public/css/sabjiwalla.css">
    <link rel="stylesheet" href="/public/css/myalert.css">
</head>

<body>

    <%- include('common/header.ejs') %>
        <%- include('common/slider.ejs') %>

            <div class="products">
                <div class="cat">Vegetables</div>
                <% vegitables.forEach(element=> { %>
                    <div class="product-box">
                        <div class="product-image"><img src="<%= element.image_url %>" alt="Not Found"></div>
                        <div class="product-name">
                            <%= element.name %>
                        </div>
                        <div class="product-price" id="product-price">
                            <%= element.price %>
                        </div>
                        <div class="cart_order">
                            <button onclick="add_to_cart('<%= element._id %>')">Cart</button>
                            <form action="/order" method="post">
                                <button>Order</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="products">
                <div class="cat">Fruits</div>
                <% fruits.forEach(element=> { %>
                    <div class="product-box">
                        <div class="product-image"><img src="<%= element.image_url %>" alt="Not Found"></div>
                        <div class="product-name">
                            <%= element.name %>
                        </div>
                        <div class="product-price" id="product-price">
                            <%= element.price %>
                        </div>
                        <div class="cart_order">
                            <button onclick="add_to_cart('<%= element._id %>')">Cart</button>
                            <form action="/order" method="post">
                                <button>Order</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>


            <div class="footer">
                <li>Home</li>
                <li>Category</li>
                <li>Order</li>
                <li>Cart</li>
            </div>
            <script>

            </script>
            <script src="/public/js/sabjiwalla.js"></script>
            <script src="/public/js/add_to_cart.js"></script>
            <script src="/public/js/myalert.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
            crossorigin="anonymous"></script>
</body>

</html>